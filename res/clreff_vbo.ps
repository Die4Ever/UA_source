#version 140

layout(std140) uniform Parameters
{
    mat4 MProj;
    mat4 MView;
    vec3 Fog;
    vec3 AlphaFog;
    bool Textured;
    bool Flat;
    bool ATest;
};

uniform sampler2D texture;
in vec4 smoothColor;
in vec2 texCoords;

uniform vec3 normclr;
uniform vec3 invclr;

void main()
{
    vec4 clr = texture2D(texture, texCoords);
    gl_FragColor = vec4( clr.xyz * normclr + (1.0 - clr.xyz) * invclr, clr.w);
}
